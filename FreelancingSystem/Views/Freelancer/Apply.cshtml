@model FreelancingSystem.ViewModel.CreateProposalViewModel

@{
    ViewData["Title"] = "Apply";
}

<h1 class="mb-4 fw-bold">
    <i class="fas fa-paper-plane text-primary"></i> Apply for Job
</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Apply" class="shadow-lg p-4 rounded-3 bg-white">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group" hidden>
                <label asp-for="JobId" class="control-label fw-bold"></label>
                <input asp-for="JobId" class="form-control shadow-sm fw-bold" />
                <span asp-validation-for="JobId" class="text-danger"></span>
            </div>

            <div class="form-group" hidden>
                <label asp-for="FreelancerId" class="control-label fw-bold"></label>
                <input asp-for="FreelancerId" class="form-control shadow-sm fw-bold" />
                <span asp-validation-for="FreelancerId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bid" class="control-label fw-bold">
                    <i class="fas fa-dollar-sign text-success"></i> Bid Amount
                </label>
                <input asp-for="Bid" class="form-control shadow fw-bold" />
                <span asp-validation-for="Bid" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="CoverLetter" class="control-label fw-bold">
                    <i class="fas fa-file-alt text-secondary"></i> Cover Letter
                </label>
                <textarea asp-for="CoverLetter" class="form-control shadow fw-bold" rows="4"></textarea>
                <span asp-validation-for="CoverLetter" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary shadow-sm">
                    <i class="fas fa-check"></i> Submit Proposal
                </button>
            </div>
        </form>
    </div>
</div>

