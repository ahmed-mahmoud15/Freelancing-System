</button>

@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        .form-control {
            border: 2px solid #ccc;
            transition: 0.3s ease;
        }

            .form-control:focus {
                border-color: #000;
                box-shadow: 0 0 10px rgba(0,0,0,0.6);
            }

        label {
            display: flex;
            align-items: center;
            gap: 6px;
        }

        textarea.form-control {
            resize: none;
        }
    </style>
}
