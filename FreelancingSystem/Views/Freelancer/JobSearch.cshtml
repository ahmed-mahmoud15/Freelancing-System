@model IEnumerable<FreelancingSystem.ViewModel.ShowJobViewModel>

@{
    ViewData["Title"] = "JobSearch";
}

<h1 class="mb-4">Job Search</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center" role="alert">
        No more jobs to apply for.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted">@item.Description</p>
                        <p class="mb-1"><strong>Budget:</strong> @item.Budget</p>
                        <p class="mb-2"><small class="text-muted">Posted on @item.CreatedAt.ToString("yyyy-MM-dd")</small></p>
                        <a asp-action="Apply"
                           asp-route-freelancerId="@int.Parse(User.FindFirst("UserId").Value)"
                           asp-route-jobId="@item.Id"
                           class="btn btn-primary">
                            Apply
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
