@model FreelancingSystem.Models.Proposal

@{
    ViewData["Title"] = "Proposal Details";
}

<h1 class="mb-4 fw-bold">
    <i class="fas fa-file-contract text-primary"></i> Proposal Details
</h1>

<div class="card shadow-lg border-0 rounded-3 p-4">
    <h4 class="fw-bold mb-3">
        <i class="fas fa-clipboard-list text-info"></i> Proposal Information
    </h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3 fw-bold">
            <i class="fas fa-calendar-alt text-warning"></i> Date
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt class="col-sm-3 fw-bold">
            <i class="fas fa-dollar-sign text-success"></i> Bid
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Bid)
        </dd>

        <dt class="col-sm-3 fw-bold">
            <i class="fas fa-info-circle text-primary"></i> Status
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="col-sm-3 fw-bold">
            <i class="fas fa-file-alt text-secondary"></i> Cover Letter
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CoverLetter)
        </dd>
    </dl>
</div>

