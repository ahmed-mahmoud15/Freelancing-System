@model FreelancingSystem.ViewModel.EditFreelancerViewModel

@{
    ViewData["Title"] = "EditProfile";
}

<!-- Custom Styling -->
<style>
    h1, h4 {
        font-weight: bold;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.25);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-group label {
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .form-control {
        font-weight: 500;
        box-shadow: 0 4px 8px rgba(0,0,0,0.25);
        border-radius: 6px;
        transition: all 0.2s ease-in-out;
    }

        .form-control:focus {
            box-shadow: 0 6px 12px rgba(0,0,0,0.35);
            border-color: #0d6efd;
        }

    .btn-custom {
        font-weight: 600;
        box-shadow: 0 4px 10px rgba(0,0,0,0.25);
        transition: transform 0.15s ease-in-out;
    }

        .btn-custom:hover {
            transform: translateY(-2px);
        }
</style>

<h1><i class="fas fa-user-edit"></i> Edit Profile</h1>
<h4><i class="fas fa-id-card"></i> Freelancer Information</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3" hidden>
                <label asp-for="Id"><i class="fas fa-key"></i> ID</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FirstName"><i class="fas fa-user"></i> First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName"><i class="fas fa-user-tag"></i> Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bio"><i class="fas fa-info-circle"></i> Bio</label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label><i class="fas fa-image"></i> Profile Image</label>
                <input type="file" name="ProfileImageFile" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                {
                    <img src="@Model.ProfileImagePath" class="mt-2 img-thumbnail" style="max-width: 150px;" />
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-custom" />
                <button type="button" class="btn btn-secondary" onclick="history.back()">
                    <i class="fas fa-arrow-left icon-back"></i> Back to List
                </button>

            </div>
        </form>
    </div>
</div>

