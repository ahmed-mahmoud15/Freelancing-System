@model IEnumerable<FreelancingSystem.ViewModel.ShowFreelancerProposalViewModel>

@{
    ViewData["Title"] = "Job Details";
}

<div class="container mt-4">
    <h2>Freelancer Proposals</h2>
    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var proposal in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">

                            <!-- Name + Status Badge -->
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title mb-0">@proposal.Name</h5>
                                @switch (proposal.Status)
                                {
                                    case FreelancingSystem.Models.Status.Approved:
                                        <span class="badge bg-success">Approved</span>
                                        break;
                                    case FreelancingSystem.Models.Status.Rejected:
                                        <span class="badge bg-danger">Rejected</span>
                                        break;
                                    case FreelancingSystem.Models.Status.Applied:
                                        <span class="badge bg-primary">Applied</span>
                                        break;
                                    case FreelancingSystem.Models.Status.UnderReview:
                                        <span class="badge bg-warning text-dark">Under Review</span>
                                        break;
                                    case FreelancingSystem.Models.Status.Interviewing:
                                        <span class="badge bg-info text-dark">Interviewing</span>
                                        break;
                                }
                            </div>

                            <!-- Bid -->
                            <h6 class="card-subtitle mb-2 text-muted">
                                Bid: @proposal.Bid.ToString("C")
                            </h6>

                            <!-- Cover Letter -->
                            <p class="card-text text-truncate" style="max-height: 100px; overflow: hidden;">
                                @proposal.CoverLetter
                            </p>

                            <!-- Action Buttons -->
                            <div class="mt-auto">
                                @if (proposal.Status != FreelancingSystem.Models.Status.Approved)
                                {
                                    <a asp-action="Hire"
                                       asp-route-jobId="@proposal.JobId"
                                       asp-route-freelancerId="@proposal.Id"
                                       class="btn btn-success btn-sm me-1">Hire</a>
                                }

                                @if (proposal.Status != FreelancingSystem.Models.Status.Rejected)
                                {
                                    <a asp-action="Reject"
                                       asp-route-jobId="@proposal.JobId"
                                       asp-route-freelancerId="@proposal.Id"
                                       class="btn btn-danger btn-sm">Reject</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No proposals have been submitted for this job yet.</p>
    }
</div>
