@model IEnumerable<FreelancingSystem.ViewModel.ShowFreelancerProposalViewModel>

@{
    ViewData["Title"] = "Job Details";
}

<!-- Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-4">
    <h2 class="mb-3">
        <i class="fas fa-file-signature text-primary me-2"></i> Freelancer Proposals
    </h2>
    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var proposal in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 proposal-card">
                        <div class="card-body d-flex flex-column">

                            <!-- Name + Status Badge -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title fw-bold text-dark">
                                    <i class="fas fa-user-circle me-2 text-secondary"></i> @proposal.Name
                                </h5>
                                @switch (proposal.Status)
                                {
                                    case FreelancingSystem.Models.Status.Approved:
                                        <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i> Approved</span>
                                        break;
                                    case FreelancingSystem.Models.Status.Rejected:
                                        <span class="badge bg-danger"><i class="fas fa-times-circle me-1"></i> Rejected</span>
                                        break;
                                    case FreelancingSystem.Models.Status.Applied:
                                        <span class="badge bg-primary"><i class="fas fa-paper-plane me-1"></i> Applied</span>
                                        break;
                                    case FreelancingSystem.Models.Status.UnderReview:
                                        <span class="badge bg-warning text-dark"><i class="fas fa-search me-1"></i> Under Review</span>
                                        break;
                                    case FreelancingSystem.Models.Status.Interviewing:
                                        <span class="badge bg-info text-dark"><i class="fas fa-comments me-1"></i> Interviewing</span>
                                        break;
                                }
                            </div>

                            <!-- Bid -->
                            <h6 class="card-subtitle mb-2 text-muted">
                                <i class="fas fa-dollar-sign me-1 text-success"></i> Bid: @proposal.Bid.ToString("C")
                            </h6>

                            <!-- Cover Letter -->
                            <p class="card-text text-truncate" style="max-height: 100px; overflow: hidden;">
                                <i class="fas fa-envelope-open-text me-1 text-secondary"></i> @proposal.CoverLetter
                            </p>

                            <!-- Action Buttons -->
                            <div class="mt-auto pt-3">
                                @if (proposal.Status != FreelancingSystem.Models.Status.Approved)
                                {
                                    <a asp-action="Hire"
                                       asp-route-jobId="@proposal.JobId"
                                       asp-route-freelancerId="@proposal.Id"
                                       class="btn btn-success btn-sm me-1">
                                        <i class="fas fa-handshake me-1"></i> Hire
                                    </a>
                                }

                                @if (proposal.Status != FreelancingSystem.Models.Status.Rejected)
                                {
                                    <a asp-action="Reject"
                                       asp-route-jobId="@proposal.JobId"
                                       asp-route-freelancerId="@proposal.Id"
                                       class="btn btn-danger btn-sm">
                                        <i class="fas fa-ban me-1"></i> Reject
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <i class="fas fa-exclamation-circle me-2"></i> No proposals have been submitted for this job yet.
        </div>
    }
</div>

<style>
    .proposal-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 10px;
    }

        .proposal-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
</style>
