@model FreelancingSystem.ViewModel.ClientProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <h2>@Model.Name</h2>
    <hr />

    <div class="row mb-4">
        <div class="col-md-4">
            <img src="@Model.PhotoPath" class="img-thumbnail" style="max-width: 100%;" />
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Company Name</dt>
                <dd class="col-sm-9">@Model.Company</dd>
            </dl>

            <a asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-primary">Edit Profile</a>
            <p>
                <a asp-action="AddJob">Create New</a>
            </p>
        </div>
    </div>

    <!-- Jobs List -->
    <h3>Jobs Posted</h3>
    @if (Model.Jobs != null && Model.Jobs.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Budget</th>
                    <th>Created At</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model.Jobs)
                {
                    <tr>
                        <td>@job.Name</td>
                        <td>@job.Description</td>
                        <td>@job.Budget.ToString("C")</td>
                        <td>@job.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-action="JobDetails" asp-route-id="@job.Id" class="btn btn-info btn-sm">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No jobs posted yet.</p>
    }
</div>
