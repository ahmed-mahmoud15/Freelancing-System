@model FreelancingSystem.ViewModel.ClientProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    /* Container Styling */
    .container {
        background: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        animation: fadeIn 0.5s ease-in-out;
    }

    h2, h3 {
        color: #062040;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Buttons */
    .btn {
        transition: all 0.3s ease;
        border-radius: 8px;
        font-weight: 500;
    }

    .btn-primary:hover {
        background-color: #1a5fd8;
        box-shadow: 0 4px 10px rgba(37,117,252,0.3);
        transform: translateY(-2px);
    }

    .btn-info:hover {
        background-color: #0dcaf0;
        box-shadow: 0 4px 10px rgba(13,202,240,0.3);
        transform: translateY(-2px);
    }

    .btn-success:hover {
        background-color: #198754;
        box-shadow: 0 4px 10px rgba(25,135,84,0.3);
        transform: translateY(-2px);
    }

    /* Table Styling */
    .table {
        border-radius: 8px;
        overflow: hidden;
    }

        .table thead {
            background: linear-gradient(to right, #2575fc, #6a11cb);
            color: white;
        }

        .table tbody tr:hover {
            background-color: rgba(37,117,252,0.05);
            transition: background 0.2s ease-in-out;
        }

    /* Image */
    .img-thumbnail {
        border: 3px solid #dee2e6;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .img-thumbnail:hover {
            transform: scale(1.03);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

    /* Fade In Animation */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="container mt-4">
    <h2><i class="fas fa-user-circle"></i> @Model.Name</h2>
    <hr />

    <div class="row mb-4">
        <!-- Profile Picture -->
        <div class="col-md-4">
            <img src="@Model.PhotoPath" class="img-thumbnail" style="max-width: 100%;" alt="Profile Picture" />

            <dl class="row mt-3">
                <dt class="col-sm-4"><i class="fas fa-building"></i> Company</dt>
                <dd class="col-sm-8">@Model.Company</dd>
            </dl>
        </div>

        <!-- Jobs Table -->
        <div class="col-md-8">
            <h3><i class="fas fa-briefcase"></i> Jobs Posted</h3>
            @if (Model.Jobs != null && Model.Jobs.Any())
            {
                <table class="table table-striped table-bordered mt-3">
                    <thead>
                        <tr>
                            <th><i class="fas fa-file-alt"></i> Name</th>
                            <th><i class="fas fa-align-left"></i> Description</th>
                            <th><i class="fas fa-dollar-sign"></i> Budget</th>
                            <th><i class="fas fa-calendar-alt"></i> Created At</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var job in Model.Jobs)
                        {
                            <tr>
                                <td>@job.Name</td>
                                <td>@job.Description</td>
                                <td>@job.Budget.ToString("C")</td>
                                <td>@job.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a asp-action="JobDetails" asp-route-id="@job.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted"><i class="fas fa-info-circle"></i> No jobs posted yet.</p>
            }

            <!-- Buttons Below Table -->
            <div class="d-flex gap-2 mt-3">
                <a asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Profile
                </a>
                <a asp-action="AddJob" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Create New
                </a>
            </div>
        </div>
    </div>
</div>
