@model FreelancingSystem.ViewModel.AddJobViewModel

@{
    ViewData["Title"] = "Add Job";
}

<!-- Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    /* Container Styling */
    .form-container {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        animation: fadeIn 0.4s ease-in-out;
    }

    h1, h4 {
        color: #062040;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Icon Colors */
    .icon-job-name {
        color: #2575fc;
    }

    .icon-description {
        color: #ff9800;
    }

    .icon-budget {
        color: #4caf50;
    }

    .icon-add {
        color: #6a11cb;
    }

    .icon-details {
        color: #009688;
    }

    .icon-back {
        color: #f44336;
    }

    /* Form Fields */
    .form-control {
        font-weight: bold;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 4px 12px rgba(37,117,252,0.3);
            border-color: #2575fc;
            transform: translateY(-1px);
        }

    /* Buttons */
    .btn {
        transition: all 0.3s ease;
        border-radius: 8px;
        font-weight: 500;
    }

    .btn-primary:hover {
        background-color: #1a5fd8;
        box-shadow: 0 4px 10px rgba(37,117,252,0.3);
        transform: translateY(-2px);
    }

    .btn-secondary:hover {
        background-color: #e53935;
        color: white;
        box-shadow: 0 4px 10px rgba(244,67,54,0.3);
        transform: translateY(-2px);
    }

    /* Fade-in Animation */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="container mt-4 form-container">
    <h1><i class="fas fa-plus-circle icon-add"></i> Add Job</h1>
    <h4><i class="fas fa-briefcase icon-details"></i> Job Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="AddJob">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">
                        <i class="fas fa-file-signature icon-job-name"></i> Job Name
                    </label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">
                        <i class="fas fa-align-left icon-description"></i> Description
                    </label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Budget" class="control-label">
                        <i class="fas fa-dollar-sign icon-budget"></i> Budget
                    </label>
                    <input asp-for="Budget" class="form-control" />
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" onclick="history.back()">
                        <i class="fas fa-arrow-left icon-back"></i> Back to List
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
