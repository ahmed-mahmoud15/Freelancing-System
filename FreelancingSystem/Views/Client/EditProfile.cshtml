@model FreelancingSystem.ViewModel.EditClientViewModel
@{
    ViewData["Title"] = "Edit Client Profile";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    /* Container Styling */
    .container {
        background: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        animation: fadeIn 0.4s ease-in-out;
    }

    h2 {
        color: #062040;
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 700;
    }

    label {
        font-weight: 600;
        color: #062040;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    /* Inputs */
    .form-control {
        border-radius: 8px;
        transition: all 0.3s ease;
        font-weight: 600;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        border: 1px solid #dee2e6;
    }

        .form-control:focus {
            border-color: #2575fc;
            box-shadow: 0 4px 12px rgba(37,117,252,0.25);
            transform: scale(1.01);
        }

    /* Image Preview */
    .img-thumbnail {
        border: 2px solid #dee2e6;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .img-thumbnail:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

    /* Buttons */
    .btn {
        border-radius: 8px;
        transition: all 0.3s ease;
        font-weight: 600;
        padding: 8px 16px;
    }

    .btn-success {
        background: linear-gradient(to right, #28a745, #218838);
        border: none;
    }

        .btn-success:hover {
            background: linear-gradient(to right, #218838, #28a745);
            box-shadow: 0 4px 12px rgba(25,135,84,0.3);
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: linear-gradient(to right, #6c757d, #5a6268);
        border: none;
    }

        .btn-secondary:hover {
            background: linear-gradient(to right, #5a6268, #6c757d);
            box-shadow: 0 4px 12px rgba(90,98,104,0.3);
            transform: translateY(-2px);
        }

    /* Fade-in Animation */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(8px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="container mt-4">
    <h2><i class="fas fa-user-edit"></i> Edit Profile</h2>
    <hr />

    <form asp-action="EditProfile" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="FirstName"><i class="fas fa-id-card"></i> First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="LastName"><i class="fas fa-id-card-alt"></i> Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CompanyName"><i class="fas fa-building"></i> Company Name</label>
            <input asp-for="CompanyName" class="form-control" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label><i class="fas fa-image"></i> Profile Image</label>
            <input type="file" name="ProfileImageFile" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
            {
                <img src="@Model.ProfileImagePath" class="mt-2 img-thumbnail" style="max-width: 150px;" />
            }
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Save Changes
            </button>
            <a asp-action="Profile" asp-route-id="@Model.Id" class="btn btn-secondary">
                <i class="fas fa-times-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
