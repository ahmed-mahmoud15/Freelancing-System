@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .navbar-nav .nav-link {
        font-weight: 500;
        padding: 6px 12px;
        border-radius: 4px;
        transition: all 0.2s ease-in-out;
    }

        .navbar-nav .nav-link:hover {
            background-color: rgba(0, 0, 0, 0.05);
            text-decoration: none;
            transform: translateY(-1px);
        }

    .navbar-nav .btn-link {
        font-weight: 500;
        color: #444;
        padding: 6px 12px;
    }

        .navbar-nav .btn-link:hover {
            color: #0d6efd;
            text-decoration: none;
            background-color: rgba(0, 0, 0, 0.05);
        }

    .navbar-nav i {
        margin-right: 6px;
    }
</style>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("Client"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark"
                   asp-route-id="@User.FindFirst("UserId")?.Value"
                   asp-area="" asp-controller="Client" asp-action="Profile">
                    <i class="fas fa-user-tie"></i> Client
                </a>
            </li>
        }

        @if (User.IsInRole("Freelancer"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark"
                   asp-route-id="@User.FindFirst("UserId")?.Value"
                   asp-area="" asp-controller="Freelancer" asp-action="Profile">
                    <i class="fas fa-laptop-code"></i> Freelancer
                </a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">
                <i class="fas fa-user-circle"></i> Hello @User.Identity?.Name!
            </a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-user-plus"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
        </li>
    }
</ul>
