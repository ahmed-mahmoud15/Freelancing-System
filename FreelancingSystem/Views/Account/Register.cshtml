@model FreelancingSystem.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Register</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhotoPath" class="form-label">Profile Photo</label>
                            <input type="file" name="ProfileImageFile" class="form-control" />
                            <span asp-validation-for="PhotoPath" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role</label>
                            <div class="form-check">
                                <input type="radio" asp-for="Role" value="Freelancer" id="roleFreelancer" class="form-check-input" />
                                <label for="roleFreelancer" class="form-check-label">Freelancer</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" asp-for="Role" value="Client" id="roleClient" class="form-check-input" />
                                <label for="roleClient" class="form-check-label">Client</label>
                            </div>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <div class="mb-3" id="freelancerBioGroup" style="display:none;">
                            <label asp-for="FreelancerBio" class="form-label"></label>
                            <textarea asp-for="FreelancerBio" class="form-control" rows="3" placeholder="Tell us about your skills"></textarea>
                            <span asp-validation-for="FreelancerBio" class="text-danger small"></span>
                        </div>

                        <div class="mb-3" id="clientCompanyGroup" style="display:none;">
                            <label asp-for="ClientCompanyName" class="form-label"></label>
                            <input asp-for="ClientCompanyName" class="form-control" placeholder="Enter your company name" />
                            <span asp-validation-for="ClientCompanyName" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Create Account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const roleFreelancer = document.getElementById("roleFreelancer");
            const roleClient = document.getElementById("roleClient");
            const freelancerBioGroup = document.getElementById("freelancerBioGroup");
            const clientCompanyGroup = document.getElementById("clientCompanyGroup");
            const freelancerBioInput = document.querySelector("[name='FreelancerBio']");
            const clientCompanyInput = document.querySelector("[name='ClientCompanyName']");

            function toggleFields() {
                if (roleFreelancer.checked) {
                    freelancerBioGroup.style.display = "block";
                    clientCompanyGroup.style.display = "none";
                    clientCompanyInput.value = "";
                } else if (roleClient.checked) {
                    freelancerBioGroup.style.display = "none";
                    clientCompanyGroup.style.display = "block";
                    freelancerBioInput.value = "";
                } else {
                    freelancerBioGroup.style.display = "none";
                    clientCompanyGroup.style.display = "none";
                    freelancerBioInput.value = "";
                    clientCompanyInput.value = "";
                }
            }

            roleFreelancer.addEventListener("change", toggleFields);
            roleClient.addEventListener("change", toggleFields);
        });
    </script>
}
