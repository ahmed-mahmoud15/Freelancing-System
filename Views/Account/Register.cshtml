@model FreelancingSystem.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhotoPath"></label>
                <input asp-for="PhotoPath" class="form-control" />
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>

            <!-- Role Selection -->
            <div class="form-group">
                <label>Role</label>
                <div>
                    <input type="radio" asp-for="Role" value="Freelancer" id="roleFreelancer" />
                    <label for="roleFreelancer">Freelancer</label>

                    <input type="radio" asp-for="Role" value="Client" id="roleClient" />
                    <label for="roleClient">Client</label>
                </div>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <!-- Freelancer Bio -->
            <div class="form-group" id="freelancerBioGroup" style="display:none;">
                <label asp-for="FreelancerBio"></label>
                <input asp-for="FreelancerBio" class="form-control" />
                <span asp-validation-for="FreelancerBio" class="text-danger"></span>
            </div>

            <!-- Client Company Name -->
            <div class="form-group" id="clientCompanyGroup" style="display:none;">
                <label asp-for="ClientCompanyName"></label>
                <input asp-for="ClientCompanyName" class="form-control" />
                <span asp-validation-for="ClientCompanyName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const roleFreelancer = document.getElementById("roleFreelancer");
            const roleClient = document.getElementById("roleClient");
            const freelancerBioGroup = document.getElementById("freelancerBioGroup");
            const clientCompanyGroup = document.getElementById("clientCompanyGroup");
            const freelancerBioInput = document.querySelector("[name='FreelancerBio']");
            const clientCompanyInput = document.querySelector("[name='ClientCompanyName']");

            function toggleFields() {
                if (roleFreelancer.checked) {
                    freelancerBioGroup.style.display = "block";
                    clientCompanyGroup.style.display = "none";
                    clientCompanyInput.value = ""; // reset company name
                } else if (roleClient.checked) {
                    freelancerBioGroup.style.display = "none";
                    clientCompanyGroup.style.display = "block";
                    freelancerBioInput.value = ""; // reset bio
                } else {
                    freelancerBioGroup.style.display = "none";
                    clientCompanyGroup.style.display = "none";
                    freelancerBioInput.value = "";
                    clientCompanyInput.value = "";
                }
            }

            roleFreelancer.addEventListener("change", toggleFields);
            roleClient.addEventListener("change", toggleFields);
        });
    </script>
}
