@model FreelancingSystem.Models.Client

@{
    ViewData["Title"] = "Client Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4">Client Profile</h2>

        <div class="d-flex align-items-center mb-4">
            <img src="@Model.ProfileImagePath" alt="Profile Image" class="rounded-circle me-4" style="width: 120px; height: 120px; object-fit: cover; border: 2px solid #007bff;" />
            <div>
                <h4>@Model.FirstName @Model.LastName</h4>
                <p class="text-muted">@Model.CompanyName</p>
            </div>
        </div>

        <dl class="row">
            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">Company Name</dt>
            <dd class="col-sm-9">@Model.CompanyName</dd>
        </dl>

        <a class="btn btn-primary" href="@Url.Action("EditProfile")">Edit Profile</a>

        @if (TempData["SuccessMessage"] != null)
        {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
        }
    </div>
</div>
